<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/gaemvnrepo.xml
        </param-value>
    </context-param>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login_error</servlet-name>
        <jsp-file>/jsp/login_error.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login_error</servlet-name>
        <url-pattern>/login_error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>
            com.bibounde.gaemvnrepo.web.IndexServlet
        </servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RepositoryServlet</servlet-name>
        <servlet-class>
            com.bibounde.gaemvnrepo.web.repository.RepositoryServlet
        </servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RepositoryServlet</servlet-name>
        <url-pattern>/repo/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <!-- >servlet-class>com.vaadin.terminal.gwt.server.GAEApplicationServlet</servlet-class-->
        <servlet-class>com.bibounde.gaemvnrepo.web.AutowiringVaadinApplicationServlet</servlet-class>
        <init-param>
            <description>Admin UI console</description>
            <param-name>application</param-name>
            <param-value>com.bibounde.gaemvnrepo.web.admin.AdminApplication</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/VAADIN/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MigrationServlet</servlet-name>
        <!-- >servlet-class>com.vaadin.terminal.gwt.server.GAEApplicationServlet</servlet-class-->
        <servlet-class>com.bibounde.gaemvnrepo.web.AutowiringVaadinApplicationServlet</servlet-class>
        <init-param>
            <description>Migration UI console</description>
            <param-name>application</param-name>
            <param-value>com.bibounde.gaemvnrepo.web.migration.MigrationApplication</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MigrationServlet</servlet-name>
        <url-pattern>/migration/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileQueueDeletionServlet</servlet-name>
        <servlet-class>com.bibounde.gaemvnrepo.web.queue.FileDeletionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FileQueueDeletionServlet</servlet-name>
        <url-pattern>/tasks/delete/file</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserQueueDeletionServlet</servlet-name>
        <servlet-class>com.bibounde.gaemvnrepo.web.queue.UserDeletionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserQueueDeletionServlet</servlet-name>
        <url-pattern>/tasks/delete/user</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MigrationQueueServlet</servlet-name>
        <servlet-class>com.bibounde.gaemvnrepo.web.queue.MigrationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MigrationQueueServlet</servlet-name>
        <url-pattern>/tasks/migration</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <url-pattern>/tasks/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter>
      <filter-name>migrationFilterChain</filter-name>
      <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>migrationFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
      <filter-name>springSecurityFilterChain</filter-name>
      <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>springSecurityFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>